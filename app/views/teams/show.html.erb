<h1><%= @team.name %></h1>

<h3>Team Members: </h3>
<ul>
    <% @team.users.each do |user| %>
        <li><%= link_to user.name, user_path(user) %></li>
    <% end %>
</ul>
<%= link_to "Add a new Team Member", new_user_path %>

<h3>Team Lists: </h3>
<ul>
<% @team.lists.each do |list| %>
    <li><%= link_to list.category, list_path(list) %></li>
<% end %>
</ul>

<%= link_to "Edit Team", edit_team_path %><br><br>
<%= button_to "Delete Team", team_path(@team), method: :delete %>
<%= link_to "Team Homepage", teams_path %>