<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p><%= error %></p>
    <% end %>
<% end %>

<%= form_for @task do |f| %>
    <%= f.label :content %><br>
    <%= f.text_area :content %><br>

    <%= f.label :user_id %><br>
    <%= f.collection_select :user_id, User.all, :id, :name %><br>
    <%= f.label :list_id %><br>
    <%= f.collection_select :list_id, List.all, :id, :category %><br>

    <%= f.label :complete %><br>
    <%= f.text_field :complete %><br>

    <%= f.submit %>
<% end %>